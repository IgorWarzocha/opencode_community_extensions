{
  "name": "flex-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "vitest run src/admin/test/*.integration.test.ts",
    "test:security": "vitest run src/admin/test/security*.test.ts",
    "test:load": "vitest run src/test/load-testing/*.test.ts",
    "test:smoke": "vitest run --reporter=verbose --run src/test/smoke.test.ts",
    "test:performance": "vitest run --reporter=verbose --run src/test/performance.test.ts",
    "deploy:staging": "git push origin develop",
    "deploy:production": "git push origin main",
    "backup:create": "node -e \"require('./src/lib/backup.js').backupService.createBackup('full')\"",
    "backup:list": "node -e \"require('./src/lib/backup.js').backupService.getBackups()\"",
    "monitor:health": "node -e \"require('./src/lib/monitoring.js').monitoringService.performHealthCheck()\"",
    "monitor:metrics": "node -e \"require('./src/lib/monitoring.js').monitoringService.collectMetrics()\""
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "clsx": "^2.1.1",
    "convex": "^1.24.2",
    "lucide-react": "^0.555.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-grab": "^0.0.54",
    "react-router-dom": "^7.9.6",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.0",
    "@tanstack/react-query": "^5.90.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "~10",
    "dotenv": "^16.4.7",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8",
    "prettier": "^3.5.3",
    "tailwindcss": "4.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.48.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.14"
  }
}
